<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        android:layout_height="match_parent"
        tools:context=".computerasssebooking">

        <Button
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/selectdate"
            android:gravity="center"
            android:textAllCaps="false"
            android:onClick="selectdates"
            android:text="Select best technique for harvesting "
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_width="388dp"
            android:layout_height="42dp"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/csselectdate"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textAllCaps="false"
                android:text="Roof type "
                android:textColor="#0288D1"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:foreground="?android:attr/selectableItemBackground">


            <Spinner
                android:id="@+id/csbookspinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter Roof area"
            android:textColor="#1976D2"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">


            <Spinner
                android:id="@+id/csbookspinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="297dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/resetpass"
            android:onClick="bookingconfirmionercomputer"
            android:text="Calculate"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/csname"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:hint="Serach place for unground water tank "
            android:textSize="20dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:textAllCaps="false"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/foregetdesign"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/csphone"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:hint="Weather report"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:background="@drawable/foregetdesign"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/csemail"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/foregetdesign"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Water level status"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/csaddress"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:hint="Pay your bill"
            android:textSize="20dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:background="@drawable/foregetdesign"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>
</ScrollView>