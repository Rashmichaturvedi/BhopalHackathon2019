<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#F0ECEC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:background="#80c5de"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="110dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:src="@drawable/iconsforget" />


        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password ?"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We just need your Valid Registerd Email id for Reset Password"
            android:layout_margin="40dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/forgetemailid"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:textAllCaps="false"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:hint="Registered Email Id"
            android:background="@drawable/foregetdesign"/>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            android:textColorHint="#212121"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/forgetpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/foregetdesign"
                android:hint="Enter new Password"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            android:textColorHint="#212121"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/forgetcpass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/foregetdesign"
                android:hint="Enter confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="30dp"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"

            android:layout_marginTop="30dp"
            android:background="@drawable/resetpass"
            android:textColor="#fff"
            android:textSize="20dp"
            android:onClick="forgetReset"

            android:textAllCaps="false"
            android:textColorHighlight="#fff"
            android:text="Reset Password"
            android:layout_gravity="center"/>
        <TextView
            android:onClick="backlogin"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:textColor="#0080ff"
            android:text="Back to Login Page"/>
    </LinearLayout>
</ScrollView>